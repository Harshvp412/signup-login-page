<html>
 <head>
        <title>Register page</title>
        <link href="/styles.css" rel="stylesheet" type="text/css" />
 </head>

 <body>
    <div class="main">
      <p class="sign" align="center">Register</p>

      <form class="form1" method="POST" action="/register">
    
        <input class="un" id="name" type="text" align="center" placeholder="Username" required>
        <input class="un" id="email" type="email" align="center" placeholder="Email" required>
        <input class="pass" id="password" type="password" align="center" placeholder="Password" required>
        
        <input class="submit" type="submit" align="center" value="Register">
        <p class="forgot" align="center"><a href="/login">Back to Login Page</p>
                   
      </div>
       
  </body>

</html>